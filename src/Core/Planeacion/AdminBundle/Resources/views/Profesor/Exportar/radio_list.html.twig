<div class="radio-list">
    {% if horasPref is defined  and  dia~"_hora_"~hora.id  in  horasPref %}
        {% set pos = -1 %}
        {% set next = 1 %}
        {% for horaPref in horasPref if next == 1%}
            {% if  dia~"_hora_"~hora.id  ==  horaPref %}
                {% set pos = loop.index0 %}
                {% set next = 0 %}
            {% endif %}
        {% endfor %}
        {% if horasPrefValor[pos] == 1 %}
            <label class="radio-inline" style="padding-left: 0px">{{hora.nombre}}
                <input type="radio" checked="true"  class="form-control"  style="margin-left: 10px"  name="{{ dia }}_hora_{{hora.id}}" value="1">
            </label>
            <label class="radio-inline" style="margin-left: 5px;padding-left: 5px">
                <input type="radio" class="form-control" name="{{ dia }}_hora_{{hora.id}}" value="2">
            </label>
        {% else %}
            <label class="radio-inline" style="padding-left: 0px">{{hora.nombre}}
                <input type="radio"   class="form-control"  style="margin-left: 10px"  name="{{ dia }}_hora_{{hora.id}}" value="1">
            </label>
            <label class="radio-inline" style="margin-left: 5px;padding-left: 5px">
                <input type="radio" checked="true" class="form-control" name="{{ dia }}_hora_{{hora.id}}" value="2">
            </label>
        {% endif %}
    {% else %}
        <label class="radio-inline" style="padding-left: 0px">{{hora.nombre}}
            <input type="radio"   class="form-control"  style="margin-left: 10px"  name="{{ dia }}_hora_{{hora.id}}" value="1">
        </label>
        <label class="radio-inline" style="margin-left: 5px;padding-left: 5px">
            <input type="radio" class="form-control" name="{{ dia }}_hora_{{hora.id}}" value="2">
        </label>
    {% endif %}
</div>