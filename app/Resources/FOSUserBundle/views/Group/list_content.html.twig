        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-group"></i>Grupos de usuarios
                </div>
                <div class="actions">
                    <a  class="btn default blue"  href="#fos_user_group_new" data-toggle="modal">
