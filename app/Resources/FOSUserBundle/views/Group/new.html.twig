{#{% extends "FOSUserBundle::layout.html.twig" %}#}

{% block fos_user_content %}
<div class="modal fade" id="fos_user_group_new" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ajax_form_block">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">{{ 'group.new.submit'|trans([], 'FOSUserBundle') }}</h4>
            </div>
            <form  action="{{ path('fos_user_group_new') }}"  {{ form_enctype(form) }} method="POST" class="fos_user_group_new ajax_form">
                <div class="modal-body">
                    <div id="{{ form.vars['id'] }}_container">
                     {% include "FOSUserBundle:Group:new_content.html.twig" %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn default" data-dismiss="modal">Cerrar</button>
                    <button class="btn blue " type="submit" value="{{ 'group.new.submit'|trans([], 'FOSUserBundle') }}">{{  'group.new.submit'|trans([], 'FOSUserBundle') }}</button>
                </div>
                <input type="hidden" name="modified" value="false"/>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
</div>
{% endblock fos_user_content %}
